<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <title>Register</title>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <link rel="stylesheet" href="./intl-input/css/intlTelInput.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <link rel="stylesheet" href="./css/upload.css">
</head>
<body class="">
    <div class="w-full grid grid-cols-1 md-2:grid-cols-2">
        <div class="hidden md-2:flex col-span-1 bg-secondary bg-cover px-12 flex-col justify-center items-center h-screen">
            <div class="w-full">
                <img src="./assets/sign-up.svg" alt="Ethereum">
                <h1 class="mt-9 text-center text-white font-semibold text-4xl">Registration</h1>
                <p class="mt-3 text-white text-center">You are one step away from an amazing experience!</p>
            </div>
        </div>

        <div class="col-span-1 flex flex-col items-center">
            <form id="register-form" class="mb-0 h-screen overflow-auto flex flex-col gap-4 w-full px-4 md-2:px-7" action="/register" method="post" novalidate>

                <div class="md-2:hidden mt-5">
                    <img class="mx-auto w-full max-w-[320px]" src="./assets/sign-up.svg" alt="Ethereum">
                    <h1 class="mt-3 text-center text-secondary font-semibold text-2xl">Registration</h1>
                    <hr class="mt-4 border border-secondary">
                </div>

                <div class="">
                    <h1 class="mt-4 text-xl text-center text-secondary font-semibold">Personal Information</h1>
                </div>

                <div class="grid grid-cols-1 xs:grid-cols-2 gap-4 w-full">
                    <div class="validate-field">
                        <div class="floating-form">
                            <input oninput="nameValidator(this)" placeholder=" " class="form-control" type="text" name="first_name" value="<%= data.first_name %>">
                            <label class="">*First Name</label>
                        </div>
                        <span class="validator"></span>
                    </div>
                    <div class="validate-field">
                        <div class="floating-form">
                            <input oninput="nameValidator(this)" placeholder=" " class="form-control" type="text" name="last_name" value="<%= data.last_name %>">
                            <label class="">*Last Name</label>
                        </div>
                        <span class="validator"></span>
                    </div>
                </div>

                <div class="validate-field">
                    <div class="floating-form">
                        <input oninput="nameValidatorEmpty(this)" placeholder=" " class="form-control" type="text" name="other_names" value="<%= data.other_names %>">
                        <label class="">Other Names</label>
                    </div>
                    <span class="validator"></span>
                </div>

                <div class="grid grid-cols-1 xs:grid-cols-2 w-full gap-4">
                    <div class="validate-field">
                        <div class="">
                            <input oninput="validated(this.parentElement)" onpause="phoneValidator(this)" placeholder="*Phone Number" class="form-control" type="tel" id="phone" name="phone" value="<%= data.phone %>" is="phone-number-input" phone-is-valid>
                        </div>
                        <span class="validator"></span>
                    </div>
                    <div class="validate-field">
                        <div class="floating-form">
                            <input oninput="validated(this)" onpause="emailValidator(this)" placeholder=" " class="form-control" type="email" name="email" value="<%= data.email %>">
                            <label class="">*Email</label>
                        </div>
                        <span class="validator"></span>
                    </div>
                </div>

                <div class="validate-field">
                    <div class="floating-form">
                        <input placeholder=" " class="form-control" type="text" name="ghana_card" value="<%= data.ghana_card %>">
                        <label class="">Ghana Card</label>
                    </div>
                    <span class="validator"></span>
                </div>

                <div class="">
                    <h1 class="text-xl text-center text-secondary font-semibold">Login Information</h1>
                </div>

                <div class="flex w-full">
                    <div class="validate-field w-full">
                        <label class="block mb-1 text-gray-500 text-sm" for="password">Password</label>
                        <div class="form-control-group w-full relative">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-lock"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
                            <input oninput="validated(this)" onpause="passwordValidator(this)" placeholder="" class="form-control !pr-14" type="password" id="password" name="password">
                            <button class="show-password-btn flex justify-center items-center absolute bg-transparent w-12 h-full top-0 right-0 rounded-r-md text-lg">
                                <ion-icon class="show-password hidden" name="eye-outline"></ion-icon>
                                <ion-icon class="show-password" name="eye-off-outline"></ion-icon>
                            </button>
                        </div>
                        <span class="validator"></span>
                    </div>
                </div>
                <div class="flex w-full">
                    <div class="validate-field w-full">
                        <label class="block mb-1 text-gray-500 text-sm" for="confirm-password">Confirm Password</label>
                        <div class="form-control-group w-full relative">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-lock"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
                            <input oninput="validated(this)" onpause="confirmPasswordValidator(this)" placeholder="" class="form-control !pr-14" type="password" id="confirm-password" name="confirm-password">
                            <button class="show-password-btn flex justify-center items-center absolute bg-transparent w-12 h-full top-0 right-0 rounded-r-md text-lg">
                                <ion-icon class="show-password hidden" name="eye-outline"></ion-icon>
                                <ion-icon class="show-password" name="eye-off-outline"></ion-icon>
                            </button>
                        </div>
                        <span class="validator"></span>
                    </div>
                </div>

                <div>
                    <label class="block mb-1 text-gray-500 text-sm" for="superuser_code">Superuser Code</label>
                    <div class="flex w-full">
                        <div class="w-full">
                            <input placeholder="Ignore if you don't have a superuser code" class="form-control" type="text" id="superuser_code" name="superuser_code" autocomplete="off">
                        </div>
                    </div>
                </div>

                <div class="g-recaptcha w-full" data-sitekey="6LcIog4qAAAAADCL0_CACas8SmsBxLJ_okmrwWOb"></div>

                <button type="submit" class="w-full btn bg-secondary text-white !py-3 mb-3">Sign Up</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="./intl-input/js/intlTelInput.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/libphonenumber-js/bundle/libphonenumber-max.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/phone-number-input-field"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

    <script src="./js/functions.js"></script>
    <script src="./js/register-validators.js"></script>

    <script>

        try{
            toastRed(document.querySelector('#error-message').textContent);
        } catch(e){console.log("No errors");}

        window.intlTelInput(document.querySelector('#phone'), {
            initialCountry: "gh",
            preferredCountries: [ "gh", "ng" ],
        });

        const PhoneNumberInput = customElements.get('phone-number-input');
        const phoneInput = new PhoneNumberInput();
        document.querySelector('#phone').defaultCountry = "GH";

        const form = document.querySelector('#register-form');

        form.addEventListener('submit', e => {
            e.preventDefault();
            const captchaResponse = grecaptcha.getResponse();

            let validated = validateAll();

            if(captchaResponse.length <= 0){
                throw new Error("Captcha not complete");
            }

            if(validated){
                document.querySelector('#phone').value = document.querySelector('#phone').getAttribute('phone-e164');
                form.submit();
            }
        });

        const showPasswordBtns = document.querySelectorAll('.show-password-btn');

        Array.from(showPasswordBtns).forEach(btn => {
            btn.addEventListener('click', e => {
                e.preventDefault();
                let input = btn.parentElement.querySelector('input');

                if(input.getAttribute('type') == 'password'){
                    input.setAttribute('type', 'text');
                } else {
                    input.setAttribute('type', 'password');
                }

                Array.from(btn.querySelectorAll('.show-password')).forEach(element => {
                    element.classList.toggle('hidden');
                });
            });
        });
    </script>
</body>
</html>